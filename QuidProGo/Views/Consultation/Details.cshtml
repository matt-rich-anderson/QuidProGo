@model QuidProGo.Models.Consultation

@{
    ViewData["Title"] = "Details";
}

<h3>@Model.Title</h3>
<p>Created on @Model.CreateDateTime</p>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AttorneyUserId)
        </dt>
        <dd class = "col-sm-10">
            @Model.Attorney.Name
        </dd>
        <dt class = "col-sm-2">Select Categories</dt>
        <dd class = "col-sm-10">
            <ul>
                @foreach (var category in Model.Categories)
                    {
                    <li class="list-group-item disabled">@category.CategoryName</li>
                    }
            </ul>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) | @Html.ActionLink("Delete", "Delete", new { id=Model.Id })<br>
    <a asp-action="Index">Back to List</a>
</div>
